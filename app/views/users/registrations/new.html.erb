<h2>会員情報入力</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nick_name, autofocus: true, autocomplete: "nick_name", :placeholder => "例）山田　太郎" %>
  </div>


  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "PC・携帯　どちらでも可能" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :placeholder => "６文字以上" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "６文字以上" %>
  </div>

<h2>住所入力</h2>

  <div class="field">
    <%= f.label :お名前 %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :placeholder => "例）山田" %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", :placeholder => "例）太郎" %>
  </div>
<br>
  <div class="field">
    <%= f.label :お名前カナ %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", :placeholder => "例）ヤマダ" %>
  </div>

  <div class="field">
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", :placeholder => "例）タロウ" %>
  </div>
<br>
  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", :placeholder => "例）123-4567" %>
  </div>
<br>
  <div class="field">
    <%= f.label :都道府県 %><br />
    <%= f.text_field :region_id, autofocus: true, autocomplete: "region_id" %>
  </div>
<br>
  <div class="field">
    <%= f.label :市区町村 %><br />
    <%= f.text_field :address_city, autofocus: true, autocomplete: "address_city", :placeholder => "例）横浜市緑区" %>
  </div>
<br>
  <div class="field">
    <%= f.label :番地 %><br />
    <%= f.text_field :address_street, autofocus: true, autocomplete: "address_street", :placeholder => "例）青山1-1-1" %>
  </div>
<br>
  <div class="field">
    <%= f.label :建物名 %><br />
    <%= f.text_field :address_building, autofocus: true, autocomplete: "address_building", :placeholder => "例）柳ビル103" %>
  </div>
<br>
  <div class="field">
    <%= f.label :電話 %><br />
    <%= f.text_field :telephone, autofocus: true, autocomplete: "telephone", :placeholder => "09012345678" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
