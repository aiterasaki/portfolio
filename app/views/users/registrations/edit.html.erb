<div class="container">
  <h2 class="text-center">会員情報編集
  </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nick_name, autofocus: true, autocomplete: "nick_name", :placeholder => "例）山田　太郎", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "PC・携帯　どちらでも可能", class: 'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "off", :placeholder => "６文字以上", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "６文字以上", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :現在のパスワード %><br />
    <%= f.password_field :current_password, autocomplete: "off", :placeholder => "６文字以上", class: 'form-control' %>
  </div>

  <h2 class="text-center">住所入力
  </h2>
  
<div class="form-group">
  <div class="form_name_box1">
      <div class="col-sm-6">
        <div class="form_name_sub_box1">
          <%= f.label :姓 %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :placeholder => "例）山田", class: 'form-control' %>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="form_name_sub_box2">
          <%= f.label :名 %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", :placeholder => "例）太郎", class: 'form-control' %>
        </div>
      </div>
  </div>
</div>

<br>
<div class="form-group">
  <div class="form_name_box2">
      <div class="col-sm-6">
        <div class="form_name_sub_box3">
          <%= f.label :セイ %><br />
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", :placeholder => "例）ヤマダ", class: 'form-control' %>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="form_name_sub_box4">
          <%= f.label :メイ %><br />
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", :placeholder => "例）タロウ", class: 'form-control' %>
        </div>
      </div>
    </div>

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", :placeholder => "例）123-4567", class: 'form-control' %>
  </div>
<br>
  <div class="field">
    <%= f.label :都道府県 %><br />
    <%= f.collection_select :region_id, Region.all, :id, :name,:prompt => "選択して下さい" %>
  </div>
<br>
  <div class="field">
    <%= f.label :市区町村 %><br />
    <%= f.text_field :address_city, autofocus: true, autocomplete: "address_city", :placeholder => "例）横浜市緑区", class: 'form-control' %>
  </div>
<br>
  <div class="field">
    <%= f.label :番地 %><br />
    <%= f.text_field :address_street, autofocus: true, autocomplete: "address_street", :placeholder => "例）青山1-1-1", class: 'form-control' %>
  </div>
<br>
  <div class="field">
    <%= f.label :建物名 %><br />
    <%= f.text_field :address_building, autofocus: true, autocomplete: "address_building", :placeholder => "例）柳ビル103", class: 'form-control' %>
  </div>
<br>
  <div class="field">
    <%= f.label :電話 %><br />
    <%= f.text_field :telephone, autofocus: true, autocomplete: "telephone", :placeholder => "09012345678", class: 'form-control' %>
  </div>
<br>

  <div class="text-center actions">
    <%= f.submit "更新する",class: "btn btn-defalt btn-lg form_btn_box" %>
  </div>
<% end %>

<%= link_to "もどる", :back %>

</div>
