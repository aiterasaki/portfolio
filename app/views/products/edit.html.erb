<%= form_for(@product) do |f| %>

<h1>投稿を編集する</h1>

	<p>
		ブランド：<%= f.text_field :brand, placeholder: 'ブランド' %>
	
	</p>
	<p>
		商品の詳細：<%= f.text_area :detail %>
	
	</p>
	<p><%= f.label :"商品の状態：" %>
  		<%= f.select :status, [["新品、未使用", "shinpin"], ["未使用に近い", "hobo_shinpin"], ["目立った傷や汚れなし", "kirei"], ["やや傷や汚れあり", 3], ["傷や汚れあり", 4], ["全体的に状態が悪い", 5]] ,class:"form-control" %>
	</p>

	<p><%#= f.label :"商品の状態：" %>
  		<%#= f.select :status, [["新品、未使用", "new"], ["未使用に近い", "unused"], ["目立った傷や汚れなし", "no_noticeable_scratch_or_dirt"], ["やや傷や汚れあり", "slightly_scratched_or_dirty"], ["傷や汚れあり", "scratches_and_dirt"], ["全体的に状態が悪い", "bad"]] ,class:"form-control" %>
	</p>
	<p><%= f.label :"配送料の負担：" %>
  		<%= f.select :burden_of_shipping_fee, [["送料込み(出品者負担)", "postage_included"], ["着払い（購入者負担）", "freight_collect"]] ,class:"form-control" %>
	</p>
	<p><%= f.label :"配送方法：" %>
		<%= f.select :shipping_method, [["らくらく便", "1"], ["ゆうゆう便", ""], ["大型便", "大型便"]] ,class:"form-control" %>

	</p>
	<p>
		<%= f.label :"配送元地域：" %>
		<%= f.collection_select :region_id, @regions, :id, :name %>

	</p>
	<p><%= f.label :"発送日の目安：" %>
		<%= f.select :estimated_shipping_date, [["１〜２日で発送", "_2days"], ["２〜３日で発送", "_3days"], ["４〜７日で発送", "_7days"]] ,class:"form-control" %>
	</p>	

	<p>
		価格：<%= f.text_field :price, placeholder: '数字半角入力' %>円
	
	</p> 
	<p>サムネイル用　画像：<%= f.attachment_field :product_images_images, multiple: true %></p>
	<p>商品画像：<%= f.attachment_field :product_images_images, multiple: true %></p>
 	<!-- <h3>サムネイ	ル画像</h3> -->
  	<%#= f.file_field :picture %>
  	<%#= f.fields_for(:product_images) do |image| %>
    	<!-- <h3>商品画像</h3> -->
    	<%#= image.file_field :image_id %>
  	<%# end %>
	<p> <%= f.submit '保存' %> </p>	

<% end %>