<h2>取引画面</h2>

<h2>商品</h2> 

<p>
  <%= attachment_image_tag @product, :thumbnail, :fill, 300, 300, format: 'jpeg' %>
</p>

  <h3><%= @product.name %></h3>
  <h3>￥<%= @product.price %>(税込)</h3>
  <h3>送料：<%= @product.burden_of_shipping_fee_i18n %></h3>


<h2>お届け先 入力(確認用)</h2>	
<%= form_for [@product, @order] do |f| %>

  <div class="field">
    <%= f.label :〒 %>
    <%= f.text_field :postal_code,value: current_user.postal_code, autofocus: true, autocomplete: "postal_code", :placeholder => "例）123-4567" %>
  </div>
  <div class="field">
    <%= f.label :都道府県 %>
    <%= f.collection_select :region_id, Region.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :市区町村 %>
    <%= f.text_field :address_city,value: current_user.address_city, autofocus: true, autocomplete: "address_city", :placeholder => "例）横浜市緑区" %>
  </div>
  <div class="field">
    <%= f.label :番地 %>
    <%= f.text_field :address_street, value: current_user.address_street, autofocus: true, autocomplete: "address_street", :placeholder => "例）青山1-1-1" %>
  </div>
  <div class="field">
    <%= f.label :建物名 %>
    <%= f.text_field :address_building, value: current_user.address_building, autofocus: true, autocomplete: "address_building", :placeholder => "例）柳ビル103" %>
  </div>

  <div class="field">
    <%= f.label :宛名 %>
    <%= f.text_field :first_name, value: current_user.first_name, autofocus: true, autocomplete: "first_name", :placeholder => "例）山田" %>
    <%= f.text_field :last_name, value: current_user.last_name,autofocus: true, autocomplete: "last_name", :placeholder => "太郎" %>様
  </div>
  <%= f.hidden_field :product_id, value: @product.id %>
<br>
  <div class="actions">
    <%= f.submit "購入する" %>
  </div>


<% end %>