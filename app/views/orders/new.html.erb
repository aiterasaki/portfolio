<h2>お届け先 登録</h2>	
<%= form_for(@order) do |f| %>


  <div class="field">
    <%= f.label :〒 %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", :placeholder => "例）123-4567" %>
  </div>
  <div class="field">
    <%= f.label :都道府県 %>
    <%= f.collection_select :region_id, Region.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :市区町村 %>
    <%= f.text_field :address_city, autofocus: true, autocomplete: "address_city", :placeholder => "例）横浜市緑区" %>
  </div>
  <div class="field">
    <%= f.label :番地 %>
    <%= f.text_field :address_street, autofocus: true, autocomplete: "address_street", :placeholder => "例）青山1-1-1" %>
  </div>
  <div class="field">
    <%= f.label :建物名 %>
    <%= f.text_field :address_building, autofocus: true, autocomplete: "address_building", :placeholder => "例）柳ビル103" %>
  </div>

  <div class="field">
    <%= f.label :宛名 %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :placeholder => "例）山田" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", :placeholder => "太郎" %>様
  </div>

<br>
  <div class="actions">
    <%= f.submit "保存する" %>
  </div>


<% end %>